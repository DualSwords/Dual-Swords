void shootShotgun()
{
    shotgunBullet -= 1;
    srand(time(NULL));                                          
    int damageShotgun = rand() % 25 + 15;
    
    if (enemyType == 5)
    {
        bossLife -= damageShotgun;
        cout << "The bosses health is now at " << bossLife << "." << endl;
    }
    
    else if (enemyType != 5)
    {
        impLife -= damageShotgun;
        cout << "The imps health is now at " << impLife << "." << endl;
    }
}

