void myTurn()
{
    if (money <= 500)
    {
        cout << "It is your turn. " << endl;
        cout << "Commands are fight, eat, and run." << endl;
        action_1:
        cin >> action;
    
        if(action != "fight" && action != "eat" && action != "run" && action != "gold")
        {
            cout << "That is not a valid action. Please try again." << endl;
            goto action_1;
        }
        
            if (action == "fight")
            {
                chooseGun();
            }
            
            else if (action == "eat")
            {
                eat();
            }
            
            else if (action == "run")
            {
                runAway();
            }
            
            else if (action == "gold")
            {
                cout << "You have " << money << " gold coins." << endl;
            }
            
            else 
            {
                cout << "That is not a valid action. Please try again." << endl;
                goto action_1;
            }
    }
    
    else if (money >= 500)
    {
        cout << "It is your turn. " << endl;
        cout << "Commands are fight, eat, shop, and run." << endl;
        action_2:
        cin >> action;
    
        if(action != "fight" && action != "eat" && action != "run" && action != "gold" && action != "shop")
        cout << "That is not a valid action. Please try again." << endl;
        goto action_2;
        
            if (action == "fight")
            {
                chooseGun();
            }
            
            else if (action == "eat")
            {
                eat();
            }
            
            else if (action == "run")
            {
                runAway();
            }
            
            else if (action == "gold")
            {
                cout << "You have " << money << " gold coins." << endl;
            }
            
            else if (action == "shop")
            {
                visitShop();
            }
            
            else 
            {
                cout << "That is not a valid action. Please try again." << endl;
                goto action_2;
            }
        }
    }   

void spoilsOfWar()
{
    srand(time(NULL));                                          
    int spoils = rand() % 3 + 1;
        
    switch (spoils)
    {
        case 1:
        money += 5*(enemyType);
        cout << "You got " << 5*enemyType << " gold coins! You now have " << money << " gold coins!" << endl;
        break;
        
        case 2:
        food += 10*(enemyType);
        cout << "You got " << 10*enemyType << " food! You now have " << food << " food!" << endl;
        break;
        
        case 3:
        shotgunBullet += 3*(enemyType);
        pistolBullet += 10*(enemyType);
        cout << "You got " << 10*enemyType << " pistol bullets and " << 3*enemyType << " shotgun bullets!" << endl;
        break;
    }
}
        
void gameOver()
{
    cout << "You have 0 life remaining. You are now dead." << endl;
    cout << "GAME OVER!" << endl;
    
    if (lives > 0)
    {
        cout << "Continue?" << endl;
        cin >> newLife;
    
        if (newLife == "yes", "Yes")
        {
            lives -= 1;
            bossLife = 200;
            int main();
        }
    }
}

void enemyPicker()
{
    srand(time(NULL));                                          
    int enemyChooser = rand() % 6 + 0;
    
    if (enemyChooser == 5)
    {
        cout << "You have encountered a boss! It is at 200 health!" << endl;
        bossLife = 200;
    }

    else
    {
        cout << "You have encountered an imp! It is at 30 health!" << endl;
        impLife = 30;
    }
    enemyType = enemyChooser;
}

void fightSequence()
{
    redo:
    myTurn();
    
    if (bossLife <= 0)
    {
        spoilsOfWar();
        enemyPicker();
        goto redo;
    }
    
    if (impLife <= 0)
    {
        spoilsOfWar();
        enemyPicker();
        goto redo;
    }
    
    if (enemyType == 5)
    {
        bossAttack();
        
        if (myLife <= 0)
        {
            gameOver();
        }
        goto redo;
    }
    
    if (enemyType != 5)
    {
        impAttack();
        
        if (myLife <= 0)
        {
            gameOver();
        }
        goto redo;
    }
} 

void textGameDualGun()
{
    enemyPicker();
    fightSequence();
}

